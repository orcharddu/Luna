<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/main_nav_background"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:src="@drawable/ic_menu_cover"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/ic_main_mask">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/main_nav_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:clickable="true"
            android:focusable="true">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="40dp"
                app:cardElevation="5dp">
                <ImageView
                    android:id="@+id/main_nav_login_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    app:srcCompat="@drawable/ic_menu_people" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/main_nav_login_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100dp"
                android:gravity="center_vertical"
                android:text="登录"
                android:textColor="@color/color_text_dark"
                android:textSize="18dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </FrameLayout>



        <FrameLayout
            android:id="@+id/main_nav_continue_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:foreground="?android:attr/selectableItemBackground">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#4D5A5A5A" />
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_menu_history" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_book_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="65dp"
                android:text="继续阅读"
                android:textColor="@color/color_accent"
                android:textSize="14dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/main_nav_continue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="40dp"
                android:text="刀剑神域"
                android:textColor="@color/color_text_black"
                android:textSize="18dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#4D5A5A5A" />

        <FrameLayout
            android:id="@+id/main_nav_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_marginLeft="26dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_search"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="65dp"
                android:text="搜索"
                android:textSize="14dp" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/main_nav_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_menu_setting"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="65dp"
                android:text="设置"
                android:textSize="14dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_nav_update"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_menu_setting"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="65dp"
                android:text="更新"
                android:textSize="14dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/main_nav_update_hint"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical|right"
                app:cardBackgroundColor="@color/color_accent"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_nav_about"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_menu_info"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="65dp"
                android:text="关于"
                android:textSize="14dp" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
