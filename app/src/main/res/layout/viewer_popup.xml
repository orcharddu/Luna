<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/viewer_popup_extend_click"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:focusable="true"
        android:clickable="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewer_popup_extend"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#505050"
        app:cardCornerRadius="0dp"
        android:animateLayoutChanges="true"
        app:cardElevation="0dp">

        <FrameLayout
            android:id="@+id/viewer_popup_extend_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <SeekBar
                android:id="@+id/viewer_popup_extend_progress_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:max="100"
                android:progress="10"
                android:progressTint="@color/color_accent_light"
                android:thumb="@drawable/ic_viewer_seekbar"
                android:elevation="10dp"/>

            <TextView
                android:id="@+id/viewer_popup_extend_progress_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="45dp"
                android:text="1"
                android:textSize="15dp"
                android:textColor="@color/color_btn_white"/>

            <TextView
                android:id="@+id/viewer_popup_extend_progress_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginRight="45dp"
                android:layout_gravity="right"
                android:text="100"
                android:textSize="15dp"
                android:textColor="@color/color_btn_white"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/viewer_popup_extend_sun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewer_popup_sun_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/color_viewer_background_white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewer_popup_sun_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/color_viewer_background_green"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewer_popup_sun_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/color_viewer_background_blue"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewer_popup_sun_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/color_viewer_background_yellow"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewer_popup_sun_grey"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/color_viewer_background_grey"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewer_popup_sun_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/color_viewer_background_black"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/viewer_popup_extend_font"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">
            <SeekBar
                android:id="@+id/viewer_popup_extend_font_size_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:max="100"
                android:progress="10"
                android:progressTint="@color/color_accent_light"
                android:thumb="@drawable/ic_viewer_seekbar"
                android:elevation="10dp"/>
            <TextView
                android:id="@+id/viewer_popup_extend_font_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="45dp"
                android:text="A"
                android:textSize="20dp"
                android:textColor="@color/color_btn_white"/>

            <TextView
                android:id="@+id/viewer_popup_extend_font_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginRight="45dp"
                android:layout_gravity="right"
                android:text="A"
                android:textSize="25dp"
                android:textColor="@color/color_btn_white"/>

        </FrameLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="#505050"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <ImageButton
                android:id="@+id/viewer_popup_btn_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/ic_viewer_progress" />

            <ImageButton
                android:id="@+id/viewer_popup_btn_sun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/ic_viewer_sun" />

            <ImageButton
                android:id="@+id/viewer_popup_btn_font"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/ic_viewer_font" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>